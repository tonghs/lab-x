/**app.wxss**/
page {
  background-color: #fafafa;
}

view {
  background-color: #fff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
} 

.line {
  width:100%;
  height:1rpx;
  background:#cdcdcd60;
}

.flex-row, .flex-column {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.footer {
  font-weight: 300;
  color: #cdcdcd;
  font-size: 24rpx;
  width:100%;
  text-align: center;

}

.footer .line {
  margin-bottom: 40rpx;
}

.bottom-footer {
  position: absolute;
  bottom: 60rpx;
}

.full-width {
  width: 100%;
}

.linked {
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-position: center right 10px;
  background-size: 40rpx;
}


.card:first-child {
  margin-top: 0;
}

.card {
  padding: 30rpx;
  margin: 15rpx 0 15rpx;
  border: 1px solid #cdcdcd60;
  background-color: #fff;
  border-width: 1rpx 0;
}

.card .title {
  font-size: 35rpx;
}

.card .body {
  font-size: 30rpx;
  font-weight: 300;
  padding-top: 15rpx;
  justify-content: space-between;
}