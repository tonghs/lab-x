/**app.wxss**/
page {
  background-color: #fafafa60;
}

view {
  background-color: #fff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
} 

.line {
  width:100%;
  height:1rpx;
  background:#cdcdcd60;
}

.flex-row, .flex-column {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.footer {
  font-weight: 300;
  color: #cdcdcd;
  font-size: 24rpx;
  width:100%;
  text-align: center;

}

.footer .line {
  margin-bottom: 40rpx;
}

.bottom-footer {
  position: absolute;
  bottom: 60rpx;
}

.full-width {
  width: 100%;
}