/* components/nav/nav.wxss */
.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  background-color: #fff;
  border: 1px solid #cdcdcd60;
  border-width: 0 0 1rpx 0;
}
.nav-main {
  width: 100%;
  height: 100%;
  position: relative;
}
.nav .capsule-box {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
}