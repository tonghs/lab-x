/* pages/chart/index.wxss */
.input-container {
  background-color: #fff;
  align-items: center;
}

.btn-plus {
  width: 100rpx;
  height: 100rpx;
  padding: 0;
  margin: 0;
  position: fixed;
  background-color: #07c160;
  color: #fff;
  text-align: center;
  align-items: center;
  line-height: 85rpx;
  float: right;
  border-radius: 50rpx;
  font-size: 80rpx;
  bottom: 20rpx;
  right: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.445);
}

.btn-plus-hover {
  scale: 1.05;
  background-color: rgba(0, 128, 0, 0.85);
}

.charts-box {
  width: 100%;
  height: 250px;
}

.summary {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}

.summary-item-value {
  font-size: 70rpx;
  font-weight: 200;
}

.summary-item-content {
  text-align: center;
  padding: 0 25rpx;
  font-size: 25rpx;
}