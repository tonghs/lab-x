/* pages/chart/index.wxss */
page {
  border: 1rpx 0 0 0;
  height: 100%;
}


.empty-tips {
  display: flex;
  color: #00000080;
  text-align: center;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  height: 100vh;
  margin-top: -40rpx;
}

.empty-tips button {
  margin-top: 30rpx;
}

.input-container {
  background-color: #fff;
  align-items: center;
}


.charts-box {
  width: 100%;
  height: 200px;
}

.summary {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  margin-top: 10rpx;
}

.summary-item-value {
  font-size: 50rpx;
  font-weight: bold;
}

.summary-item-content {
  text-align: center;
  padding: 0 25rpx;
  font-size: 30rpx;
}

.metric-name {
  color: #000000;
}