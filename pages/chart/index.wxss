/* pages/chart/index.wxss */

view {
  background-color: initial;
}

.container {
  padding: 0 20rpx;
}

.card:first-child {
  margin-top: 0;
}

.card {
  /* width: 100%; */
  padding: 30rpx;
  margin: 15rpx 0 15rpx;
  /* box-shadow: 0 3rpx 5px 1px #cdcdcd60; */
  /* border-radius: 20rpx; */
  border: 1px solid #cdcdcd60;
  background-color: #fff;
  border-width: 1rpx 0;
}

.card .title {
  font-size: 35rpx;
}

.card .body {
  font-size: 30rpx;
  font-weight: 300;
  padding-top: 15rpx;
  justify-content: space-between;
}

.input-container {
  background-color: #fff;
  align-items: center;
}

.btn-plus {
  width: 100rpx;
  height: 100rpx;
  padding: 0;
  margin: 0;
  position: fixed;
  background-color: rgba(0, 128, 0, 0.75);
  color: #fff;
  text-align: center;
  align-items: center;
  line-height: 85rpx;
  float: right;
  border-radius: 50rpx;
  font-size: 80rpx;
  bottom: 20rpx;
  right: 20rpx;
  box-shadow: 3rpx 3rpx 10rpx rgba(0, 0, 0, 0.445);
}

.btn-plus-hover {
  scale: 1.05;
  background-color: rgba(0, 128, 0, 0.85);
}

.charts-box {
  width: 100%;
  height: 250px;
}