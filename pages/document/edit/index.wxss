/* pages/document/edit/index.wxss */
view {
  background-color: initial;
}

.container {
  padding: 0 20rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
}

.btn-container {
  width: 100%;
  margin-top: 30rpx;
  text-align: right;
}

.btn-container .btn {
  width: 200rpx;
  margin: 0;
}

.doc-image {
  width: 100%;
  box-shadow: 0 0 5rpx #cdcdcd;
  margin-top: 20rpx;
}

.footer {
  padding-bottom: 80rpx;
}

.img-list:first-child {
  margin-top: 15rpx;
}

.img-list {
  position: relative;
}

.img-close {
  width: 48rpx;
  height: 48rpx;
  background-color: #51515160;
  border-radius: 24rpx;
}

.btn-delete-view {
  width: 48rpx;
  height: 48rpx;
  flex: auto;
}

.btn-delete-container {
  position: relative;
  margin: 30rpx 15rpx -80rpx 0;
  position: relative;
  z-index: 10;
  text-align: right;
  flex: auto;
}