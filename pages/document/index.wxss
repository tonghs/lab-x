/* pages/chart/index.wxss */

.container {
  padding: 0 20rpx;
}

.preview {
  width:32%;
  margin: 0 15rpx 15rpx 0;
  box-shadow: 0 0 5rpx #cdcdcd;
  height: 160rpx;
  background-size: cover;
  background-position: center;
}

.preview:last-child {
  margin-right: 0;
}

.preview-full {
  box-shadow: 0 0 5rpx #cdcdcd;
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 420rpx;
}

.preview-double {
  box-shadow: 0 0 5rpx #cdcdcd;
  background-size: cover;
  background-position: center;
  width: 50%;
  height: 240rpx;
  margin-right: 15rpx;
}

.preview-double:last-child {
  margin-right: 0;
}

.imgs {
  margin-top: 15rpx;
}

.btn-container {
  margin-top: 40rpx;
  text-align: right;
}

.btn-container button {
  margin-left: 20rpx;
}


.card .footer {
  font-size: 26rpx;
  color: #cdcdcd;
  margin-top: 15rpx;
}

.ts, .btn-menu-container {
  width: 50%;
}

.ts {
  text-align: left;
}

.btn-menu-container {
  text-align: right;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.btn-menu {
  width: 70rpx;
  height: 32rpx;
  text-align: right;
  border-radius: 6rpx;
  margin-left: auto;
}

.btn-menu-img {
  width: 32rpx;
  height: 32rpx;
}

.input-container {
  background-color: #fff;
  align-items: center;
}

.txt-search {
  background-color: #cdcdcd60;
  border-radius: 30rpx;
  padding: 0 20rpx;
  flex: auto;
  font-size: 26rpx;
  color: #cdcdcd;
}

.btn-upload {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.placeholder-tips {
  color: #cdcdcd;
  text-align: center;
  padding-top: 50rpx;
}